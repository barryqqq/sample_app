<% provide(:title, 'Sign up') %>


	

	<h1> Sign Up </h1>

	<div class="row">
		<div class="col-lg-12">
			<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f|  %>
				<%# if @user.errors.any? %>
					<ul>
					<%# @user.errors.each do |attr,msg|  %>
 						<li><%#=msg%></li>
					<%# end %>
					</ul>
				<%# end %>
					
					<div class="form-group">
						
						<%= f.label :name, "* name", :class => "control-label col-lg-3" %>

						<div class="col-lg-6">
							<%= f.text_field :name, :class => "form-control"%>
							
						</div>	
					</div>	

					<div class="form-group">
						<%= f.label :email, "* email", :class => "control-label col-lg-3" %>
						
						<div class="col-lg-6">
							<%= f.text_field :email, :class => "form-control" %>
							
						</div>	
					</div>

					<div class="form-group">
						<%= f.label :password, "* password", :class => "control-label col-lg-3" %>
						
						<div class="col-lg-6">
							<%= f.password_field :password, :class => "form-control" %>
						</div>	
					</div>	

					<div class="form-group">
						<%= f.label :password_confirmation, " * Confirm Password", :class => "control-label col-lg-3" %>
						
						<div class="col-lg-6">
							<%= f.password_field :password_confirmation, :class => "form-control" %>
						</div>	
					</div>	

					<div class="form-group">
						
						<div class="text-center">
							<%= f.submit "Create my account", class: "btn btn-primary btn-large" %>
							  
						</div>	
					</div>		




				
			
			<% end %>
		</div>	
	</div>	

