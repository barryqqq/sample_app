<%= form_for(@user, multipart: true, :html => { :class => "form-horizontal" }) do |f| %>

	<div class="row">
		<div class="col-lg-12">
				
			<div class="form-group">
					
				<%= f.label :name, :class => "control-label col-lg-3" %>

				<div class="col-lg-6">
					<%= f.text_field :name, :class => "form-control"%>
						
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :first_name, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :first_name, :class => "form-control" %>
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :last_name, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :last_name, :class => "form-control" %>
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :email, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :email, :class => "form-control", :disabled => "disabled" %>
					
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :phone, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :phone, :class => "form-control" %>
				</div>	
			</div>	

			<div class="form-group">
				<%= f.label :birthday, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :birthday, :class => "form-control datepicker" %>
				</div>	
			</div>	


			<div class="form-group">
				<%= f.label :gender, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<div class="btn-group" data-toggle="buttons">
					  <label class="btn btn-default">
					    <%= f.radio_button :gender, 0 %> Female
					  </label>
					  <label class="btn btn-default">
					    <%= f.radio_button :gender, 1 %> &nbsp;Male&nbsp;&nbsp;&nbsp;&nbsp;
					  </label>
					</div>		
						
				</div>
					
			</div>	


			<div class="form-group">
				<%= f.label :language, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<select name="user[language]" class="form-control">
					    <option value="en">English</option>
					    <option value="ch">中文</option>
					</select>
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :education, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">

					<select name="user[education]" class="form-control">
						<option value="hs">High School</option>
						<option value="cc">College Credit</option>
						<option value="bd">Bachelor's Degree</option>
						<option value="md">Master's Degree</option>
						<option value="dd">Doctorate Degree</option>
			
		  			</select>
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :work, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= f.text_field :work, :class => "form-control" %>
				</div>	
			</div>

			<div class="form-group">
				<%= f.label :location, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%= render 'layouts/state_picker' %>
					<%= f.hidden_field :location, :value => "NY", :class => "form-control" %>
				</div>	
			</div>

			<!--

			<div class="form-group">
				<%#= f.label :facebook_id, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%#= f.text_field :facebook_id, :class => "form-control" %>
				</div>	
			</div>

			<div class="form-group">
				<%#= f.label :weibo_id, :class => "control-label col-lg-3" %>
				
				<div class="col-lg-6">
					<%#= f.text_field :weibo_id, :class => "form-control" %>
				</div>	
			</div>
			-->

			<div class="form-group">
					
				<div class="text-center">
					<%#= f.submit "Save Changes", class: "btn btn-primary btn-large" %>  
				</div>	

			</div>		

				
 		</div>	
	</div>	

	<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>

<% end %>    

	 
<script>

	$('.state_input option[value=<%= @user.location %>]').attr('selected','selected');
	
	$('.datepicker').datepicker({ 
		format: "yyyy-mm-dd",
		startView:2
	});

	$('.state_input').change(function() {
		$('#user_location').val($(this).val());		
	});	
	
</script>	
