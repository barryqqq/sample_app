<% if @properties.present? %>
    <% @properties.each do |p| %>
    <div class="row">
    <div class="pull-right">
        <div class="dropdown">
            <a data-toggle="dropdown" href="#" class="btn btn-default btn-xs">Options <span class="caret"></span></a>
            <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dLabel">
                <li><a href="<%= edit_property_path(p) %>"><i class="fa fa-pencil"></i>&nbsp;Edit</a></li>
                <li>
                    <%= link_to p, method: :delete, data: {confirm: "Are you sure to delete this property ? "} do %> <span class="text-danger"><i class="fa fa-trash-o"></i>&nbsp;Delete</span>
                    <% end %>
                </li>


            </ul>
        </div>
       
    </div>
    </div> 

    <!-- <a id="<%= p.id %>" href="" class=""> -->
    <%= link_to property_path(p) do %>    
        <div class="row  list-group-item "> 

            <div class="col-lg-6 nopadding">
        
                <% if p.photos.first.present? %> 
                
                   <img src="<%= p.photos.first.image_url_medium %>" alt="no image" class=" img_size col-lg-12 img-rounded">
              

                <% else %>
                   <img class="col-lg-12 img-rounded" data-src="holder.js/250x100">
                <% end %>
            
            </div>

            <div class="col-lg-6 ">
                <ul class="list-unstyled">  
                    <li> <%= p.id %> </li>  
                    <li > <strong> <%= p.city.upcase %>, <%= p.state.upcase %> </strong></li>   
                    
                    <li> <%= price_on_type p.price, p.category %> </li>
                  
                    <li> <%= render_type p.category %>  </li>

                    <li> <%= pluralize(p.bed, "  Bed") %>/ <%= pluralize(p.bath, "  Bath") %></li>

                </ul>
                <div class="pull-right">
                    <span class="timestamp"> Posted <%= time_ago_in_words(p.created_at) %> ago. </span>
                </div>     

            </div><!-- /col-->  


        </div><!-- /row --> 
    <!--</a>-->
    <% end %>

    <!--<hr> -->
    <% end %> <!-- /each -->
<% end %> <!-- /if -->


            
       
        
            
