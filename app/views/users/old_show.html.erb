
<% provide( :title, @user.name) %>



<div class="row">
	<div class="col-md-7">
		<div>
			<img src=<%= @user.avatar.url(:thumb) %> class="img-rounded" alt="Rounded Image">
		</div>
		<h3> <%= @user.name %>  <%= @user.email %> </h3>
		
		<% if current_user?(@user) %>
			<section>
				<%= render 'microposts/micropost_form' %>
			</section>
		<% end %>
			
	</div>
	<div class="col-md-5">
		
		<% if @user.microposts.any? %>

			<h3> ( <%= pluralize(@user.microposts.count, " ) Micropost") %> </h3>
			<ol class="microposts">
				<%= render @microposts %>

			</ol>

			<%= will_paginate @microposts %>

		<% end %>
	</div>
		
</div>	
