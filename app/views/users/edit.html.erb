<% provide(:title, "Edit User's Profile") %>


<h1> Update your Profile </h1>
	<div class="row">
		<div class="col-lg-12">

			<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
				
				<div class="form-group">
						
					<%= f.label :name, :class => "control-label col-lg-3" %>

					<div class="col-lg-6">
						<%= f.text_field :name, :class => "form-control"%>
							
					</div>	
				</div>

				<div class="form-group">
					<%= f.label :email, :class => "control-label col-lg-3" %>
					
					<div class="col-lg-6">
						<%= f.text_field :email, :class => "form-control", :disabled => true %>
						
					</div>	
				</div>


				<div class="form-group">
					<%= f.label :password, :class => "control-label col-lg-3" %>
					
					<div class="col-lg-6">
						<%= f.password_field :password, :class => "form-control" %>
					</div>	
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, "Confirm Password", :class => "control-label col-lg-3" %>
					
					<div class="col-lg-6">
						<%= f.password_field :password_confirmation, :class => "form-control" %>
					</div>	
				</div>	

				<div class="form-group">
					<%= f.label :avatar, "profile photo", :class => "control-label col-lg-3" %>
					
					<div class="col-lg-6">
						<%= f.file_field :avatar, :class => "form-control" %>
					</div>	
				</div>	




				<div class="form-group">
						
					<div class="text-center">
						<%= f.submit "Save Changes", class: "btn btn-primary btn-large" %>
						  
					</div>	
				</div>		

				
			<% end %>

 		</div>	
	</div>	
