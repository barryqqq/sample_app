



<h2><%= t("devise.sessions.new.log_in") %></h2>  <%= render "devise/shared/login_signup" %>
<hr>

<div class="row">
  <div class="col-sm-offset-2 col-sm-4">
    <%= render "devise/shared/social_links" %>
  </div>  
</div>  

<div class="row">
  <div class=" col-sm-offset-3 col-sm-4 ">
    <h5> <%= t("devise.registrations.new.or") %> </h5>
  </div>  
</div>  




<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, :type => :email, :class => "form-control", :placeholder => t("form.email_input") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, t("form.password"), :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, :class => "form-control", :placeholder => t("form.password_input") %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <%= t("devise.sessions.new.remember_me") %>
          <% end -%>
        </div>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary"><%= t("devise.sessions.new.log_in") %></button>
    </div>
  </div>

<% end %>

<div class="row">
  <div class="col-sm-offset-2 col-sm-4">
    <%= render "devise/shared/links" %>
  </div>
</div>