

 <%= devise_error_messages! %>
<h2><%= t("devise.passwords.edit.change_password") %></h2>

<hr>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal", :role => "form" }) do |f| %>


  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t("devise.passwords.edit.new_password"), :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, :class => "form-control", :placeholder => t("devise.passwords.edit.new_password_input") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password"), :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder =>  t("devise.passwords.edit.confirm_new_password_input") %>
    </div>
  </div>


   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary"><%= t("devise.passwords.edit.change_password") %></button>
    </div>
  </div>

  
<% end %>

<div class="row">
  <div class="col-sm-offset-2 col-sm-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
